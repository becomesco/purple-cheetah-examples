{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "target": "ES2020",
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "importsNotUsedAsValues": "error",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@todo/*": ["./todo/*"],
      "@todo-mongodb/*": ["./todo-mongodb/*"]
    }
  },
  "include": ["todo", "todo-mongodb"],
  "exclude": ["node_modules", "dist"]
}
